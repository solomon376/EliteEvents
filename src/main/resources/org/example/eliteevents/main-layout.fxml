<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="1200" prefHeight="800">

    <!-- Left: include sidebar as a separate file -->
    <left>
        <fx:include source="sidebar.fxml"/>
    </left>

    <!-- Top bar -->
    <top>
        <HBox spacing="12" style="-fx-padding:12 16; -fx-background-color:transparent; -fx-alignment: CENTER_LEFT;">
            <Label text="Elite Events" style="-fx-font-size:16px; -fx-font-weight:700;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="globalSearch" promptText="Search bookings, clients..." prefWidth="360"/>
            <Button fx:id="btnNewBooking" text="+ New Booking"/>
            <Button fx:id="btnNotifications" text="ðŸ””"/>
            <Button fx:id="btnProfile" text="Profile"/>
        </HBox>
    </top>

    <!-- Center: dynamic content area -->
    <center>
        <AnchorPane fx:id="contentRoot" style="-fx-background-color: #F7F7F9;"/>
    </center>
</BorderPane>
