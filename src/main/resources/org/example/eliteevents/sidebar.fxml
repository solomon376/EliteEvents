<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Label?>

<VBox spacing="12" style="-fx-background-color: #1E1E2E; -fx-padding:20;"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.eliteevents.SidebarController">

    <!-- Main Navigation -->
    <Button fx:id="btnDashboard" style="-fx-pref-width:180; -fx-background-color: #2D2D3A; -fx-text-fill: white;" text="Dashboard" onAction="#onDashboard"/>
    <Button fx:id="btnNewBooking" style="-fx-pref-width:180; -fx-background-color: #2D2D3A; -fx-text-fill: white;" text="New Booking" onAction="#onNewBooking"/>
    <Button fx:id="btnAllBookings" style="-fx-pref-width:180; -fx-background-color: #2D2D3A; -fx-text-fill: white;" text="All Bookings" onAction="#onAllBookings"/>

    <Separator style="-fx-background-color: #444;"/>

    <!-- Quick Add Section -->
    <Label text="Quick Add" style="-fx-text-fill: #888; -fx-font-size: 12px; -fx-padding: 0 0 5 0;"/>
    <Button fx:id="btnAddClient" style="-fx-pref-width:180; -fx-background-color: #3D7DFF; -fx-text-fill: white;" text="+ Add Client" onAction="#onAddClient"/>
    <Button fx:id="btnAddVenue" style="-fx-pref-width:180; -fx-background-color: #3D7DFF; -fx-text-fill: white;" text="+ Add Venue" onAction="#onAddVenue"/>
    <Button fx:id="btnAddVendor" style="-fx-pref-width:180; -fx-background-color: #3D7DFF; -fx-text-fill: white;" text="+ Add Vendor" onAction="#onAddVendor"/>


    <Separator style="-fx-background-color: #444;"/>

    <!-- Management Sections -->
    <Button fx:id="btnVenues" style="-fx-pref-width:180; -fx-background-color: #2D2D3A; -fx-text-fill: white;" text="Venues" onAction="#onVenues"/>
    <Button fx:id="btnVendors" style="-fx-pref-width:180; -fx-background-color: #2D2D3A; -fx-text-fill: white;" text="Vendors" onAction="#onVendors"/>
    <Button fx:id="btnClients" style="-fx-pref-width:180; -fx-background-color: #2D2D3A; -fx-text-fill: white;" text="Clients" onAction="#onClients"/>

    <Button fx:id="btnCalendar" style="-fx-pref-width:180; -fx-background-color: #2D2D3A; -fx-text-fill: white;" text="Calendar" onAction="#onCalendar"/>


    <Separator style="-fx-background-color: #444;"/>

    <!-- Other Sections -->
    <Button fx:id="btnPayments" style="-fx-pref-width:180; -fx-background-color: #2D2D3A; -fx-text-fill: white;" text="Payments" onAction="#onPayments"/>
    <Button fx:id="btnSettings" style="-fx-pref-width:180; -fx-background-color: #2D2D3A; -fx-text-fill: white;" text="Settings" onAction="#onSettings"/>

</VBox>