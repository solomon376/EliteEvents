<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Separator?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      spacing="25" style="-fx-padding: 30; -fx-background-color: #f8fafc; -fx-alignment: center;">

    <!-- Header -->
    <VBox spacing="8" alignment="CENTER">
        <Label text="Cryptocurrency Payments" style="-fx-text-fill: #1e293b; -fx-font-size: 28px; -fx-font-weight: bold;"/>
        <Label text="Secure digital payments for your event bookings" style="-fx-text-fill: #64748b; -fx-font-size: 14px;"/>
    </VBox>

    <!-- Crypto Selection Cards -->
    <VBox spacing="15">
        <Label text="Select Cryptocurrency" style="-fx-text-fill: #374151; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        <HBox spacing="15" alignment="CENTER">
            <!-- Bitcoin Card -->
            <StackPane style="-fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                <Rectangle arcWidth="8" arcHeight="8" width="140" height="120" fill="white"
                           style="-fx-stroke: #e5e7eb; -fx-stroke-width: 1;"/>
                <VBox spacing="8" alignment="CENTER">
                    <Label text="₿" style="-fx-text-fill: #f59e0b; -fx-font-size: 28px;"/>
                    <Label text="Bitcoin" style="-fx-text-fill: #1e293b; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label text="/$45,231.50" style="-fx-text-fill: #059669; -fx-font-size: 12px;"/>
                </VBox>
            </StackPane>

            <!-- Ethereum Card -->
            <StackPane style="-fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                <Rectangle arcWidth="8" arcHeight="8" width="140" height="120" fill="white"
                           style="-fx-stroke: #e5e7eb; -fx-stroke-width: 1;"/>
                <VBox spacing="8" alignment="CENTER">
                    <Label text="⧫" style="-fx-text-fill: #627eea; -fx-font-size: 28px;"/>
                    <Label text="Ethereum" style="-fx-text-fill: #1e293b; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label text="/$3,415.20" style="-fx-text-fill: #059669; -fx-font-size: 12px;"/>
                </VBox>
            </StackPane>

            <!-- Solana Card -->
            <StackPane style="-fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                <Rectangle arcWidth="8" arcHeight="8" width="140" height="120" fill="white"
                           style="-fx-stroke: #e5e7eb; -fx-stroke-width: 1;"/>
                <VBox spacing="8" alignment="CENTER">
                    <Label text="◎" style="-fx-text-fill: #dc1fff; -fx-font-size: 28px;"/>
                    <Label text="Solana" style="-fx-text-fill: #1e293b; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Label text="/$112.75" style="-fx-text-fill: #059669; -fx-font-size: 12px;"/>
                </VBox>
            </StackPane>
        </HBox>
    </VBox>

    <!-- Payment Details Card -->
    <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-border-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 4);">
        <Label text="Payment Details" style="-fx-text-fill: #1e293b; -fx-font-size: 20px; -fx-font-weight: bold;"/>

        <HBox spacing="40" alignment="CENTER_LEFT">
            <VBox spacing="12">
                <Label text="Event Details" style="-fx-text-fill: #64748b; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <VBox spacing="4">
                    <Label text="Tech Conference 2024" style="-fx-text-fill: #1e293b; -fx-font-size: 16px;"/>
                    <Label text="Main Hall • December 15, 2024" style="-fx-text-fill: #6b7280; -fx-font-size: 14px;"/>
                </VBox>
            </VBox>

            <VBox spacing="12">
                <Label text="Payment Amount" style="-fx-text-fill: #64748b; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <VBox spacing="4">
                    <Label text="/$5,000.00" style="-fx-text-fill: #059669; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                    <Label text="≈ 0.1105 BTC" style="-fx-text-fill: #6b7280; -fx-font-size: 14px;"/>
                </VBox>
            </VBox>
        </HBox>

        <Separator/>

        <!-- Wallet Address -->
        <VBox spacing="10">
            <Label text="Wallet Address" style="-fx-text-fill: #374151; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="bc1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0wlh"
                       style="-fx-text-fill: #374151; -fx-font-size: 13px; -fx-font-family: 'Monospace'; -fx-background-color: #f3f4f6; -fx-padding: 12 16; -fx-background-radius: 8;"/>
                <Button text="Copy" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 8;"/>
            </HBox>
            <Label text="Send exact amount to this address" style="-fx-text-fill: #6b7280; -fx-font-size: 12px;"/>
        </VBox>
    </VBox>

    <!-- Payment Status -->
    <VBox spacing="15" alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-border-color: #e5e7eb; -fx-border-width: 1; -fx-border-radius: 12;">
        <Label text="Payment Status" style="-fx-text-fill: #1e293b; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        <ProgressIndicator progress="0.5" style="-fx-accent: #3b82f6;"/>
        <VBox spacing="5" alignment="CENTER">
            <Label text="Waiting for confirmation" style="-fx-text-fill: #374151; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Label text="2 out of 6 network confirmations" style="-fx-text-fill: #6b7280; -fx-font-size: 12px;"/>
        </VBox>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Refresh Status"
                style="-fx-background-color: #f3f4f6; -fx-text-fill: #374151; -fx-font-weight: bold; -fx-padding: 12 24; -fx-background-radius: 8;"/>

        <Button text="Send Reminder"
                style="-fx-background-color: #f3f4f6; -fx-text-fill: #374151; -fx-font-weight: bold; -fx-padding: 12 24; -fx-background-radius: 8;"/>

        <Button text="View Receipt"
                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 24; -fx-background-radius: 8;"/>
    </HBox>

    <!-- Market Info -->
    <VBox spacing="10" style="-fx-background-color: #f1f5f9; -fx-background-radius: 8; -fx-padding: 15;">
        <Label text="Market Prices" style="-fx-text-fill: #374151; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        <HBox spacing="25" alignment="CENTER">
            <Label text="BTC: $45,231.50" style="-fx-text-fill: #059669; -fx-font-size: 12px;"/>
            <Label text="ETH: $3,415.20" style="-fx-text-fill: #059669; -fx-font-size: 12px;"/>
            <Label text="SOL: $112.75" style="-fx-text-fill: #059669; -fx-font-size: 12px;"/>
        </HBox>
    </VBox>

</VBox>