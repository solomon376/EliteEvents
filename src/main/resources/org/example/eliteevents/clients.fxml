<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.eliteevents.controllers.ClientsListController"
      spacing="12" style="-fx-padding:16;">
    <HBox spacing="8">
        <Label text="Clients" style="-fx-font-size:16px; -fx-font-weight:600;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="clientSearch" promptText="Search clients..."/>
        <Button fx:id="btnAddClient" text="Add Client" onAction="#onAddClient" style="-fx-background-color: #3D7DFF; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="tblClients" prefHeight="560">
        <columns>
            <TableColumn fx:id="colClientName" text="Name" prefWidth="220"/>
            <TableColumn fx:id="colClientEmail" text="Email" prefWidth="260"/>
            <TableColumn fx:id="colClientPhone" text="Phone" prefWidth="160"/>
            <TableColumn fx:id="colClientCompany" text="Company" prefWidth="180"/>
            <TableColumn fx:id="colClientActions" text="Actions" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>