<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="16" style="-fx-padding:20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.eliteevents.controllers.DashboardController">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="12">
        <Label style="-fx-font-size:18px; -fx-font-weight:600;" text="Dashboard" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#refresh" style="-fx-background-color: #3D7DFF; -fx-text-fill: white; -fx-padding: 6 12;" text="Refresh" />
        <Label fx:id="lblCurrentDate" style="-fx-text-fill: #666;" text="Today: Nov 20, 2025" />
    </HBox>

    <!-- Metrics Cards -->
    <HBox spacing="12">
        <VBox style="-fx-padding:16; -fx-background-color:white; -fx-background-radius:10; -fx-min-width: 180; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);">
            <Label style="-fx-font-size:12px; -fx-text-fill:#666;" text="Total Bookings" />
            <Label fx:id="metricTotalBookings" style="-fx-font-size:20px; -fx-font-weight:600; -fx-text-fill: #3b82f6;" text="0" />
        </VBox>

        <VBox style="-fx-padding:16; -fx-background-color:white; -fx-background-radius:10; -fx-min-width: 180; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);">
            <Label style="-fx-font-size:12px; -fx-text-fill:#666;" text="Revenue" />
            <Label fx:id="metricRevenue" style="-fx-font-size:20px; -fx-font-weight:600; -fx-text-fill: #10b981;" text="/$0" />
        </VBox>

        <VBox style="-fx-padding:16; -fx-background-color:white; -fx-background-radius:10; -fx-min-width: 180; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);">
            <Label style="-fx-font-size:12px; -fx-text-fill:#666;" text="Upcoming" />
            <Label fx:id="metricUpcoming" style="-fx-font-size:20px; -fx-font-weight:600; -fx-text-fill: #f59e0b;" text="0" />
        </VBox>

        <VBox style="-fx-padding:16; -fx-background-color:white; -fx-background-radius:10; -fx-min-width: 180; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);">
            <Label style="-fx-font-size:12px; -fx-text-fill:#666;" text="Leads" />
            <Label fx:id="metricLeads" style="-fx-font-size:20px; -fx-font-weight:600; -fx-text-fill: #ef4444;" text="0" />
        </VBox>
    </HBox>

    <!-- Content Sections -->
    <HBox spacing="12" VBox.vgrow="ALWAYS">
        <VBox style="-fx-background-color:white; -fx-padding:16; -fx-min-width: 400; -fx-pref-height: 280; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);">
            <Label style="-fx-font-weight:600; -fx-padding: 0 0 8 0;" text="Upcoming Events" />
            <ListView fx:id="lvUpcomingEvents" prefHeight="250" style="-fx-border-color: #e5e7eb; -fx-border-radius: 4;" />
        </VBox>

        <VBox style="-fx-background-color:white; -fx-padding:16; -fx-min-width: 300; -fx-pref-height: 280; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0, 0, 2);">
            <Label style="-fx-font-weight:600; -fx-padding: 0 0 8 0;" text="Venue Availability" />
            <ListView fx:id="lvVenueAvailability" prefHeight="250" style="-fx-border-color: #e5e7eb; -fx-border-radius: 4;" />
        </VBox>
    </HBox>
</VBox>
